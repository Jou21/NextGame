<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransacaoComprarActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txt_transacao_termos_de_uso_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="TERMOS DE USO"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/lay_transacao_1_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_transacao_termos_de_uso_comprar">

            <TextView
                android:id="@+id/txt_transacao_1_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="O valor desse jogo é de " />

            <TextView
                android:id="@+id/txt_transacao_valor_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="R$ 35,00"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_transacao_6_comprar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Você precisa ter de saldo em sua carteira igual ou superior ao valor que o dono do jogo está pedindo."
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_transacao_1_comprar" />


        <TextView
            android:id="@+id/txt_transacao_14_comprar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="A transação será computada e o jogo será seu a partir do momento que você scaneou o código de barras do jogo"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_transacao_6_comprar" />

        <LinearLayout
            android:id="@+id/lay_transacao_4_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_transacao_14_comprar">

            <TextView
                android:id="@+id/txt_transacao_15_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="com o botão " />

            <TextView
                android:id="@+id/txt_transacao_16_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="SCAN "
                android:gravity="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_transacao_scan_comprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_barcode_scan" />

            <TextView
                android:id="@+id/txt_transacao_17_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" do menu da tela inicial." />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_transacao_5_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_transacao_4_comprar">

            <CheckBox
                android:id="@+id/checkBox_transacao_comprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:theme="@style/checkBoxStyle" />

            <TextView
                android:id="@+id/txt_transacao_checkbox_comprar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Li e aceito os termos e condições deste contrato."
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lay_transacao_6_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_transacao_comprar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_transacao_5_comprar">

            <ImageView
                android:id="@+id/img_transacao_carteira_comprar"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:srcCompat="@drawable/ic_carteira" />

            <TextView
                android:id="@+id/txt_transacao_seu_saldo_eh_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=" SEU SALDO É "
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_transacao_valor_na_carteira_comprar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="R$ 00,00"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_transacao_comprar"
            android:layout_width="319dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_btn_arredondado_verde"
            android:text="COMPRAR"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lay_transacao_6_comprar" />

        <Button
            android:id="@+id/btn_transacao_adicionar_comprar"
            android:layout_width="319dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_btn_arredondado_azul"
            android:text="ADICIONAR"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_transacao_comprar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_transacao_comprar"
            app:layout_constraintTop_toBottomOf="@+id/btn_transacao_comprar" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>