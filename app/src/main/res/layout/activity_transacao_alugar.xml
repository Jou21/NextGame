<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransacaoAlugarActivity">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/txt_transacao_termos_de_uso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TERMOS DE USO"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/lay_transacao_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transacao_termos_de_uso">

        <TextView
            android:id="@+id/txt_transacao_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="O valor para aluguel desse jogo é " />

        <TextView
            android:id="@+id/txt_transacao_valor_aluguel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="R$ 35,00"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_transacao_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_1">

        <TextView
            android:id="@+id/txt_transacao_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mas o usuário cobra " />

        <TextView
            android:id="@+id/txt_transacao_valor_caucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 70,00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_transacao_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" de caução." />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_transacao_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="O valor de caução é uma garantia que a NextGame da para o usuário fornecedor do jogo de que ele irá ser reembolsado caso não receba o jogo de volta."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_2" />

    <TextView
        android:id="@+id/txt_transacao_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Você precisa ter de saldo em sua carteira o valor correspondente ao valor de caução do usuário fornecedor do jogo."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transacao_5" />


    <LinearLayout
        android:id="@+id/lay_transacao_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transacao_6">


        <TextView
            android:id="@+id/txt_transacao_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Você ficará com esse jogo por "
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_transacao_semanas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 semana"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_transacao_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" a partir do" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_transacao_14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="momento que você scaneou o código de barras do jogo"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_3" />

    <LinearLayout
        android:id="@+id/lay_transacao_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transacao_14">

        <TextView
            android:id="@+id/txt_transacao_15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="com o botão " />

        <TextView
            android:id="@+id/txt_transacao_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SCAN "
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_transacao_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_barcode_scan" />

        <TextView
            android:id="@+id/txt_transacao_17"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" do menu da tela inicial." />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_transacao_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_4">

        <TextView
            android:id="@+id/txt_transacao_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="A cada dia a mais com o jogo lhe será cobrado " />

        <TextView
            android:id="@+id/txt_transacao_19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="14,29% "
            android:gravity="center"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_transacao_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="que seria o equivalente a diaria do jogo, isso até completar o valor de caução que você utilizou para alugar este jogo."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_7" />

    <LinearLayout
        android:id="@+id/lay_transacao_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_transacao_20">

        <CheckBox
            android:id="@+id/checkBox_transacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/checkBoxStyle"
            android:scaleX="1.3"
            android:scaleY="1.3" />

        <TextView
            android:id="@+id/txt_transacao_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Li e aceito os termos e condições deste contrato."
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_transacao_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_transacao_alugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_5">

        <ImageView
            android:id="@+id/img_transacao_carteira"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/ic_carteira" />

        <TextView
            android:id="@+id/txt_transacao_seu_saldo_eh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" SEU SALDO É "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_transacao_valor_na_carteira"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="R$ 00,00"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_transacao_alugar"
        android:layout_width="319dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_btn_arredondado_roxo"
        android:text="ALUGAR"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lay_transacao_6" />

    <Button
        android:id="@+id/btn_transacao_adicionar"
        android:layout_width="319dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_btn_arredondado_azul"
        android:text="ADICIONAR"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_transacao_alugar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_transacao_alugar"
        app:layout_constraintTop_toBottomOf="@+id/btn_transacao_alugar" />




</android.support.constraint.ConstraintLayout>
</ScrollView>