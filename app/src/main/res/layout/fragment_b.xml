<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFragmentPS4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2d2d"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonB"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_marginEnd="3dp"
        android:clickable="true"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/b_guideline6"
        app:layout_constraintStart_toEndOf="@+id/b_guideline7"
        app:srcCompat="@drawable/ic_search_white" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2B"
        android:layout_width="90dp"
        android:layout_height="76dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#0065DE"
        android:clickable="true"
        android:visibility="visible"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/b_guideline6"
        app:layout_constraintStart_toEndOf="@+id/b_guideline7"
        app:srcCompat="@drawable/ic_search_white" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.835" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80" />

    <android.support.constraint.Guideline
        android:id="@+id/b_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/b_my_recycler_view_of_recyclers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="15dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/b_guideline4"
        app:layout_constraintTop_toTopOf="@+id/b_guideline3"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBarB"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_guideline5">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/layout_elevado" />

        <LinearLayout
            android:id="@+id/b_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="#2d2d2d"
            android:orientation="horizontal"
            android:paddingTop="0dp">

            <Button
                android:id="@+id/my_games_ps4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="-35dp"
                android:paddingTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#2d2d2d"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/ic_baseline_videogame_asset_b"
                android:text="Meus Jogos"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="-35dp"
                android:paddingTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#2d2d2d"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/ic_baseline_chat_b"
                android:text="Chat"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="-35dp"
                android:paddingTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#2d2d2d"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/ic_baseline_attach_money_b"
                android:text="Carteira"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-6dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="-35dp"
                android:paddingTop="40dp"
                android:layout_weight="1"
                android:backgroundTint="#2d2d2d"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/ic_baseline_map_b"
                android:text="Mapa"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="-20dp"
                android:layout_marginTop="-5dp"
                android:layout_weight="1"
                android:backgroundTint="#2d2d2d"
                android:drawablePadding="-10dp"
                android:drawableTop="@drawable/ic_cinza"
                android:text=" "
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEscuroB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#2d2d2d"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/layoutContentB"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:backgroundTint="#696969"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutButtonsB"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/search_border"
        android:backgroundTint="#696969"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>